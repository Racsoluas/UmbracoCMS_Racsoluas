@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var content = (ContentModels.TrustedSection)Model.Content;
}

<section class="bg-[#F7F7F7] py-24">
    <div class="mx-auto max-w-6xl flex flex-row md:flex-row items-center">
        <div>
            <span class="text-xs font-bold py-5 my-3 text-secondary gap-5">@content.TrustedSectionLabel</span>
            <h2 class="text-3xl font-bold text-light gap-3">@content.TrustedSectionTitle</h2>
            <p>@content.TrustedSectionDescription</p>
            <div class="star-icon flex">
                @foreach (var _ in Enumerable.Range(0, 5))
                {
                    <i class="fa-solid fa-star text-dark text-lg mt-1 mr-2"></i>
                }
            </div>
            <div class="flex flex-col gap-3"><span class="text-sm">@content.TrustedSectionName</span>
            <span class="text-m font-semibold">@content.TrustedSectionCompany</span>
            </div>
        </div>
        <div>
            @{
                System.Diagnostics.Debug.Assert(content.TrustedSectionImage != null, "content.TrustedSectionImage != null");
            }
            <img src="@content.TrustedSectionImage.Url()" alt="Kevin smiling">
        </div>
    </div>

</section>